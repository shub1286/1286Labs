{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "paths": {
            "~components/*": ["src/components/*"],
            "~hooks/*": ["src/Hooks/*"],
            "~hooks": ["src/Hooks"],
            "~components": ["src/components"],
            "~fonts/*": ["public/fonts/*"],
            "~fonts": ["public/fonts"],
            "~image/*": ["public/image/*"],
            "~image": ["public/image"],
            "~sections": ["src/sections"],
            "~sections/*": ["src/sections/*"],
            "~styled/*": ["src/styles/*"],
            "~styled": ["src/styles"],
            "~scss/*": ["src/styles/scss/*"],
            "~scss": ["src/styles/scss"],
            "~data/*": ["src/data/*"],
            "~data": ["src/data"],
            "~utils/*": ["src/utils/*"],
            "~utils": ["src/utils"],
            "@/*": ["node_modules/*"],
            "@": ["node_modules"],
            "~theme/*": ["src/theme/*"],
            "~theme": ["src/theme"],
            "~svg/*": ["src/svg/*"],
            "~svg": ["src/svg"]
        },
    }
}